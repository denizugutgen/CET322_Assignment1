@model List<Student>
<table> 
<thead>
<tr>
    <td>ID</td>
    <td>Name</td>
    <td>Surname</td>
    <td></td>
    
</tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>
                <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.ID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.ID" class="btn btn-danger"
                   onclick="return confirm('Bu öğrenciyi silmek istediğinize emin misiniz?');">Delete 
                </a>
            </td>
    
        </tr>
        
    }
    <a asp-action="Create" asp-controller="Student" class="btn btn-primary">Yeni Öğrenci Yarat</a>
</tbody>
</table>