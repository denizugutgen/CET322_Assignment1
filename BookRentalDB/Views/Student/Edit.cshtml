@model Student

<h2>Öğrenci Düzenle</h2>

<form asp-action="Edit" method="post">
    
    <div class="form-group">
        <label asp-for="ID">ID</label>
        <input asp-for="ID" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Name">İsim</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Soyisim</label>
        <input asp-for="Surname" class="form-control" value="@Model.Surname" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Doğum Tarihi</label>
        <input asp-for="BirthDate" type="date" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
    </div>
    
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>